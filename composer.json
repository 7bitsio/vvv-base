{
    "name": "jpry/vvv-base",
    "authors": [
        {
            "name": "Jeremy Pry",
            "email": "JPry@users.noreply.github.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress",
                "type": "wordpress-core",
                "version": "4.7.3",
                "dist": {
                    "type": "zip",
                    "url": "https://wordpress.org/wordpress-4.7.3.zip"
                },
                "require": {
                    "johnpbloch/wordpress-core-installer": "*"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress/wordpress-no-content",
                "type": "wordpress-core",
                "version": "4.7.3",
                "dist": {
                    "type": "zip",
                    "url": "https://wordpress.org/wordpress-4.7.3-no-content.zip"
                },
                "require": {
                    "johnpbloch/wordpress-core-installer": "*"
                }
            }
        }
    ],
    "require": {
        "wordpress/wordpress": "^4.7"
    },
    "extra": {
        "wordpress-install-dir": {
            "wordpress/wordpress": "htdocs",
            "wordpress/wordpress-no-content": "htdocs"
        },
        "installer-paths": {
            "htdocs/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "htdocs/wp-content/themes/{$name}/": ["type:wordpress-theme"],
            "htdocs/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"]
        }
    }
}
